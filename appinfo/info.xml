    <licence>agpl</licence>
    <author>Julien Veyssier</author>
    <namespace>Giphy</namespace>
    <documentation>
        <developer>https://github.com/nextcloud/integration_giphy</developer>
    </documentation>
    <category>integration</category>
    <website>https://github.com/nextcloud/integration_giphy</website>
    <bugs>https://github.com/nextcloud/integration_giphy/issues</bugs>
